<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-3" >
    <h3><%= all.title %></h3>
    </div>
    <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%= all.image %>" class="card-img-top show-img" alt="listing image">
        <div class="card-body">
          <p class="card-text">
           
            <%= all.description %> <br>
            &#8377;<%= all.price.toLocaleString("en-IN") %> <br>
            <%= all.location %> <br>
            <%= all.country %>

        
        </p>
        </div>
      </div>
    
      <div class="btns">
        <a href="/listings/<%= all._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    

        <form method="POST" action="/listings/<%= all._id %>?_method=DELETE" >
            <button class="btn btn-dark offset-5">Delete</button>
        </form>

      </div>

      <div class="col-8 offset-3 mb-3" >
        <hr>
        <h4>Leave a Review</h4>
        <form action="/listings/<%=all.id%>/reviews" method="POST" novalidate class="needs-validation">
          <div class="mb-3 mt-3" >
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="0" max="5" id="rating" name="review[rating]" class="form-range">
          </div>
          <div class="mb-3 mt-3" >
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
          </div>
          <button class="btn btn-outline-dark">Submit</button>
        </form>

        <hr>
       <p><b>All Reviews</b></p>
       <div class="row">
        <% for(review of all.reviews) {%>
          <div class="card col-5 mb-3 ms-3">
            <div class="card-body">
              <h5 class="card-title">Joe</h5>
              <p class="card-text"><%= review.comment %></p>
              <p class="card-text"><%= review.rating %> stars </p>
            </div>
            <form class="mb-3" action="/listings/<%=all._id %>/reviews/<%=review._id %>?_method=DELETE" method="post">
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          </div>
        <% } %>
      </div>
      </div>
   

</div>
